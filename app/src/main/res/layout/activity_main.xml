<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"


    android:alpha="0.9"
    android:background="@drawable/citybuilding"

    tools:context=".MainActivity">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="15dp"
        android:layout_marginRight="25dp"
        android:layout_marginBottom="0dp"

        >

        <AutoCompleteTextView
            android:id="@+id/editTextCity"
            android:layout_width="match_parent"
            android:layout_height="41dp"
            android:alpha="0.9"
            android:background="@drawable/search_shape"
            android:completionThreshold="1"
            android:drawableLeft="@android:drawable/ic_menu_search"
            android:drawableRight="@drawable/ic_outline_location_on_24"
            android:elevation="5dp"
            android:hint="City..."

            android:textSize="15dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent">

        </AutoCompleteTextView>

        <TextView
            android:id="@+id/cityName"
            android:layout_width="314dp"
            android:layout_height="38dp"
            android:text="City name"
            android:textSize="30sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/dividerTop" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="24dp"
            android:layout_height="41dp"
            android:elevation="10dp"
            android:onClick="intentActivityFromGps"
            android:src="@drawable/ic_outline_location_on_24"
            app:layout_constraintEnd_toEndOf="@+id/editTextCity"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_outline_location_on_24" />

        <View
            android:id="@+id/dividerBottom"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#41000000"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/weatherView"
            app:layout_constraintVertical_bias="0.055" />

        <View
            android:id="@+id/dividerTop"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginTop="7dp"
            android:background="#41000000"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/editTextCity" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/polutantContainer"
            android:layout_width="match_parent"
            android:layout_height="162dp"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="32dp"
            android:isScrollContainer="true"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/weatherView"
            tools:listitem="@layout/cards_bottom" />

        <LinearLayout
            android:id="@+id/showQuality"
            android:layout_width="match_parent"
            android:layout_height="217dp"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="5dp"
            android:alpha="1"
            android:orientation="horizontal"
            app:layout_constraintBottom_toTopOf="@+id/weatherView"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/dividerTop2">

            <androidx.cardview.widget.CardView
                android:id="@+id/card"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginBottom="5dp"
                android:alpha="0.8"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?selectableItemBackground"
                app:cardBackgroundColor="#FFFFFF"
                app:cardCornerRadius="32dp"
                app:cardElevation="10dp"
                app:cardMaxElevation="10dp"
                app:contentPadding="10dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/header_title"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_weight="1"
                            android:elegantTextHeight="true"
                            android:text="Indeks jakości powietrza"
                            android:textAlignment="textStart" />

                    </LinearLayout>

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="162dp"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentBottom="true"
                        android:layout_marginStart="0dp"
                        android:layout_marginTop="1dp"
                        android:layout_marginEnd="0dp"
                        android:layout_marginBottom="0dp">


                        <com.marcinmoskala.arcseekbar.ArcSeekBar
                            android:id="@+id/seekArc"
                            android:layout_width="match_parent"
                            android:layout_height="93dp"
                            android:layout_marginBottom="8dp"
                            android:clickable="false"
                            app:enabled="false"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintHorizontal_bias="0.0"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintVertical_bias="0.905"
                            app:progress="0"
                            app:progressBackgroundColor="@color/sliderBack"
                            app:progressBackgroundWidth="10dp"
                            app:progressWidth="20dp"
                            app:roundEdges="true"
                            app:thumb="@drawable/thumb2" />

                        <TextView
                            android:id="@+id/polutantValue"
                            android:layout_width="65dp"
                            android:layout_height="37dp"
                            android:text="1"
                            android:textAlignment="center"
                            android:textSize="20dp"
                            app:layout_constraintBottom_toBottomOf="@+id/seekArc"
                            app:layout_constraintEnd_toEndOf="@+id/seekArc"
                            app:layout_constraintStart_toStartOf="@+id/seekArc"
                            app:layout_constraintTop_toTopOf="@+id/seekArc"
                            app:layout_constraintVertical_bias="0.535" />

                        <TextView
                            android:id="@+id/airQualityView"
                            android:layout_width="match_parent"
                            android:layout_height="46dp"
                            android:layout_marginEnd="5dp"
                            android:layout_weight="1"
                            android:elegantTextHeight="true"
                            android:maxLines="3"
                            android:text="Indeks potwietrza jest"
                            android:textAlignment="center"
                            android:textSize="24sp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintHorizontal_bias="0.514"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintVertical_bias="0.086" />

                        <TextView
                            android:id="@+id/airQualityLiteral"
                            android:layout_width="179dp"
                            android:layout_height="32dp"
                            android:layout_weight="1"
                            android:elegantTextHeight="true"
                            android:maxLines="3"
                            android:text="bardzo dobry"
                            android:textAlignment="center"
                            android:textSize="18sp"
                            app:layout_constraintBottom_toBottomOf="@+id/seekArc"
                            app:layout_constraintEnd_toEndOf="@+id/seekArc"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="@+id/seekArc"
                            app:layout_constraintVertical_bias="0.967" />

                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_alignParentStart="true"

                        android:layout_alignParentEnd="true"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="25dp"
                        android:layout_marginEnd="10dp"
                        android:background="?android:attr/listDivider" />


                </RelativeLayout>

            </androidx.cardview.widget.CardView>


        </LinearLayout>

        <LinearLayout
            android:id="@+id/weatherView"
            android:layout_width="361dp"
            android:layout_height="102dp"
            android:layout_marginTop="5dp"
            android:alpha="0.9"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/showQuality">

            <androidx.cardview.widget.CardView

                android:id="@+id/weatherCard"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginBottom="5dp"
                android:alpha="0.8"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?selectableItemBackground"
                app:cardBackgroundColor="#FFFF"
                app:cardCornerRadius="32dp"
                app:cardElevation="10dp"
                app:cardMaxElevation="10dp"
                app:contentPadding="10dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_alignParentStart="true"

                        android:layout_alignParentTop="true"
                        android:layout_alignParentEnd="true"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="25dp"
                        android:layout_marginEnd="10dp"
                        android:background="?android:attr/listDivider" />

                    <TextView
                        android:id="@+id/weatherHeader"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="4dp"
                        android:text="Aktualna pogoda" />

                    <TextView
                        android:id="@+id/weatherTemp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_marginStart="5dp"
                        android:layout_marginTop="34dp"
                        android:layout_toEndOf="@+id/imageView2"
                        android:text="17°C" />

                    <TextView
                        android:id="@+id/windSpeed"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_marginStart="5dp"
                        android:layout_marginTop="35dp"
                        android:layout_toEndOf="@+id/imageView3"
                        android:text="32km/h" />

                    <ImageView
                        android:id="@+id/imageView2"
                        android:layout_width="37dp"
                        android:layout_height="35dp"
                        android:layout_below="@+id/weatherHeader"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentBottom="true"
                        android:layout_marginStart="21dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="9dp"
                        app:srcCompat="@drawable/ic_outline_wb_sunny_24" />

                    <ImageView
                        android:id="@+id/imageView3"
                        android:layout_width="37dp"
                        android:layout_height="35dp"
                        android:layout_below="@+id/weatherHeader"
                        android:layout_alignParentBottom="true"
                        android:layout_marginStart="15dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="4dp"
                        android:layout_toEndOf="@+id/weatherTemp"
                        app:srcCompat="@drawable/ic_outline_air_24" />


                </RelativeLayout>


            </androidx.cardview.widget.CardView>


        </LinearLayout>

        <View
            android:id="@+id/dividerTop2"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginTop="5dp"
            android:background="#41000000"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/stationName" />

        <TextView
            android:id="@+id/stationName"
            android:layout_width="301dp"
            android:layout_height="20dp"
            android:text="Station name"
            android:textSize="15sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cityName" />

    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>
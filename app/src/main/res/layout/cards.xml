<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="120dp"
    android:layout_height="150dp"
    android:layout_marginTop="25dp"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:id="@+id/card"
    card_view:cardBackgroundColor="#FFFF"
    card_view:cardCornerRadius="32dp"
    card_view:contentPadding="10dp"
    android:foreground="?selectableItemBackground"
    android:clickable="true"
    android:focusable="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/textView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:elegantTextHeight="true"
                android:text="PM2.5"
                android:textAlignment="center" />

        </LinearLayout>


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="103dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="0dp"
            android:layout_marginBottom="0dp">


            <ProgressBar
                android:id="@+id/polutantBar"
                style="@style/CircularProgressBar"
                android:layout_width="77dp"
                android:layout_height="82dp"
                card_view:layout_constraintBottom_toBottomOf="parent"
                card_view:layout_constraintEnd_toEndOf="parent"
                card_view:layout_constraintStart_toStartOf="parent"
                card_view:layout_constraintTop_toTopOf="parent"
                tools:layout_conversion_absoluteHeight="82dp"
                tools:layout_conversion_absoluteWidth="75dp"
                tools:progress="50" />

            <TextView
                android:id="@+id/polutantValue"
                android:layout_width="47dp"
                android:layout_height="18dp"
                android:text="50%"
                android:textAlignment="center"
                card_view:layout_constraintBottom_toBottomOf="@+id/polutantBar"
                card_view:layout_constraintEnd_toEndOf="@+id/polutantBar"
                card_view:layout_constraintStart_toStartOf="@+id/polutantBar"
                card_view:layout_constraintTop_toTopOf="@+id/polutantBar" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <View
            android:id="@+id/dividerBottom"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentStart="true"

            android:layout_alignParentEnd="true"
            android:layout_marginStart="10dp"
            android:layout_marginTop="25dp"
            android:layout_marginEnd="10dp"
            android:background="?android:attr/listDivider" />


    </RelativeLayout>

</androidx.cardview.widget.CardView>